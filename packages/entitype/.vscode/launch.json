{
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "Run Tests",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "npm",
      "args": [
        "run",
        "test:debug"
      ],
      "port": 5858,
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceRoot}/.env",
      "smartStep": true,
      "showAsyncStacks": true
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "attach",
      "showAsyncStacks": true,
      "smartStep": true,
      "port": 5858,
      "name": "Attach Program",
      "address": "localhost:5858"
    }
  ]
}
