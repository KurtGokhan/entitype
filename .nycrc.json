{
  "check-coverage": true,
  "include": [
    "packages/*/src/**/*.ts"
  ],
  "reporter": [
    "lcov",
    "text-summary"
  ],
  "require": [
    "ts-node/register",
    "tsconfig-paths/register"
  ],
  "extension": [
    ".ts",
    ".tsx"
  ],
  "exclude": [
    "**/*.d.ts"
  ],
  "report-dir": "./tmp",
  "temp-directory": "./tmp/.nyc_output",
  "all": true
}
