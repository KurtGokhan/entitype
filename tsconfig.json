{
  "version": "2.1.1",
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "pretty": true,
    "baseUrl": "./"
  },
  "exclude": [
    "tmp",
    "temp",
    "build",
    "dist",
    "node_modules"
  ]
}
