{
    "version": "2.1.1",
    "compilerOptions": {
      "lib": [
        "es5",
        "es6",
        "dom"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "stripInternal": true,
      "pretty": true,
      "baseUrl": "./packages"
    },
    "exclude": [
      "**/test",
      "**/tmp",
      "**/temp",
      "**/build",
      "**/dist",
      "**/node_modules",
      "**/*.spec.ts"
    ]
  }
